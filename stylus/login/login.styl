$orange = #ED692B

*
  outline none
body
  background-color #efefef
  font-family SimHei
.header
  height 35px
  background-color #fff
  line-height 35px

  .icon-back
    position absolute
    top 0
    left 0
    display inline-block
    width 35px
    height 35px
    background url("../../img/nav_back_icon@2x.png") no-repeat center
    background-size 12px 18px

  .header-title
    display inline-block
    width 100%
    color $orange
    text-align center
.form-list
  height 80px
  margin-top 15px
  padding-right 15px
  background-color #fff
  .form-cell
    display flex
    height 40px
    line-height 40px
    &-name
      display inline-block
      width 50px
      padding-left 40px
      background url("../../img/content_ID_icon@2x.png") no-repeat left 10px center
      background-size 25% 50%
      &.cell-passwd
        background url("../../img/content_password_icon@2x.png") no-repeat left 12px center
        background-size 16px 50%
    .form-cell-input
        flex 1
        height 38px
        margin 0
        padding 0
        border none
    &:after
      content ''
      position absolute
      top 90px
      left 8px
      z-index 5
      display block
      height 1px
      width 100%
      background-color #efefef
.bt_box
  display -webkit-box
  display flex-box
  display flex
  display box
  height 40px
  margin-top 20px
  padding 0 15px
  .btn_login
    display block
    width 100%
    height 40px
    border none
    border-radius 5px
    background-color #c7c7c7
    color #fff
    font-size 1.1rem
    line-height 40px
    &.active
      background #EA5404
  .bt-reg
    padding-left 10px
    color $orange
    flex 1
  .bt-passwd
    flex 1
    padding-right 10px
    color #7A7A7C
    text-align right