body
  margin 0
  padding 0
  background #efefef
  font-size 14px
header
  height 30px
  padding 10px
  line-height 30px
  font-size 18px
  font-weight bold
  text-align center
  background #ffffff
article
  margin-top 10px
  position absolute
  top 60px
  bottom 72px
  overflow auto
  section
    padding 10px 3%
    height 105px
    background #ffffff
    position relative
    margin-bottom 10px
    .con
      height 72px
      .icon-back
        display block
        width 30%
        height 76px
        float left
        background url("../../img/content_img@2x.png") no-repeat center
        background-size 100px 76px
        margin-right 5%
      .info
        float left
        width 65%
        color #646464
        line-height 20px
        .title
          display block
          width 100%
          height 20px
          .tdate
            float right
            color #b4b4b4
            font-size 12px
        .text
          display block
          text-indent 1.2em
        .date
          color #ff8a00
          font-size 12px
    .del
      position fixed
      display none
      background #ff3b30
      color #ffffff
      margin-top -82px
      right 0
      width 18%
      height 125px
      line-height 105px
      text-align center
      font-size 16px
    .status
      background #ea5404
      display block
      color #ffffff
      border-radius 5px
      width 55px
      height 22px
      line-height 22px
      text-align center
      float right
      &.active
        background #ffffff
        color #000
        width 100px
        margin-right 5%
footer.bottom-list
  width 100%
  padding 2% 0
  border-top 1px solid #d6d7dc
  background-color #FFFFFF
  position fixed
  bottom 0
  display flex
  .bottom-column
    text-align center
    flex 1
    img
      width 22px
    img.add-img
      width 42px
    p
      margin 0
      font-size 0.8rem
      color #b4b4b4
    p.active
      color $orange
      position relative
  .bottom-columncon
    text-align center
    flex 1
    img
      width 22px
    img.add-img
      width 42px
.publish
  position fixed
  top 0
  bottom 0
  width 100%
  z-index 10
  display none
  background rgba(0,0,0,0.9)
  .con
    width 100%
    padding 0 16%
    position fixed
    bottom 110px
    height 120px
    .left,.right
      width 95px
      height 95px
      border-radius 50%
      float left
      background url("../../img/publish/publish_btn02@2x.png") no-repeat center
      background-size 95px 95px
      position relative
      span
        display block
        width 95px
        text-align center
        position absolute
        bottom -25px
        color: #ffffff
      &.right
        background url("../../img/publish/publish_btn01@2x.png") no-repeat center
        background-size 95px 95px
        margin-left 16%
  .bottom
    height 60px
    background url("../../img/publish/publish_close_icon@2x.png") no-repeat center #242221
    background-size 16px 16px
    position fixed
    bottom 0
    width 100%