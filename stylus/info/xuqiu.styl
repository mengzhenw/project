body
  background-color #efefef
  font-family SimHei
.header
  height 40px
  background-color #fff
  line-height 40px
  .icon-back
    position absolute
    top 10
    left 0
    display inline-block
    width 35px
    height 35px
    background url("../../img/nav_back_icon@2x.png") no-repeat center
    background-size 12px 18px
  .header-title
    display inline-block
    width 100%
    text-align center
.demand_cells
  padding 10px 0
.demand_cell

  width 100%
  min-height 100px
  border-radius 5px
  box-shadow 0 0 1px 1px #e0e0e0
  background-color #ffffff
.demand-title
  padding 10px
  display flex
  border-bottom 1px solid #e0e0e0
.d-t-name
  flex 1
  color #323232
.d-t-tag
  display inline-flex
  padding 4px 8px
  font-style normal
  font-size 12px
  color #878787
//
.demand-info
  padding 10px
  margin 0
  line-height 1.2em
  color #646464
//
.demand-footer
  display flex
  height 30px
  line-height 30px
  padding  10px
  .btn-detail
    width 100px
    height 30px
    text-align center
    //padding 0 6px
    color #999988
    border 1px solid #ececec
    border-radius 5px
    background-color #efefef
    margin 0 auto