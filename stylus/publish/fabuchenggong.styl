body
  background #b2b2b2
  font-family SimHei

  .box
    width 250px
    height 100px
    background-color #ffffff
    border-radius 6px
    margin 0 auto
    margin-top 50%
    position relative
    &:after
      content ''
      display block
      position: absolute
      top 50%
      left 0
      width 250px
      height 1px
      background-color #d6d7dc
    .box_text
      text-align center
      line-height 50px
      .box_top
        font-size 12px
        color #323232
      .box_down
        color #ea5404