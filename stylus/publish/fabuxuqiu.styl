$orange = #ea5404
body
  background-color #efefef
  font-family SimHei
.header
  height 35px
  background-color #fff
  line-height 35px
  display flex
  .header_left
    display inline-block
    width 100%
    text-align left
    flex 1
    font-size 14px
  .header_title
    display inline-block
    width 100%
    text-align center
    flex 1
  .header_right
    display inline-block
    width 100%
    color $orange
    font-size 14px
    text-align right
    flex 1
.input_box
  margin-top 10px
  .int
    width 80%
    border-radius 5px
    border none
    line-height 35px
    display block
    margin 0 auto
    margin-top 10px
  .int1
    border-radius 5px
    border none
    display block
    margin 0 auto
    margin-top 10px
    padding 10px